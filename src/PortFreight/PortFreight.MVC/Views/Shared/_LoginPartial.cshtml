<ul class="navbar-nav">
    @if (User.Identity is { IsAuthenticated: true })
    {
        <li class="nav-item">
            <a href="#" class="nav-link" title="Manage">
                @User.Identity.Name
            </a>
        </li>
        <li class="nav-item">
            <form class="form-check-inline" method="post" asp-controller="Auth" asp-action="Logout" asp-route-returnUrl="@Url.ActionContext">
                <button type="submit" class="nav-link btn btn-link">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item pe-2">
            <a class="nav-item" asp-controller="Auth" asp-action="Register">
                Register
            </a>
        </li>
        <li class="nav-item ps-2">
            <a class="nav-item" asp-controller="Auth" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>